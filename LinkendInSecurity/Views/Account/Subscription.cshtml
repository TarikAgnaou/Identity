@model LinkendInSecurity.Models.SubscriptionViewModel;

@{
    ViewData["Title"] = "Subscription";
}

<h1>Subscription</h1>

<form asp-controller="Account" asp-action="Subscription" method="post">
    <div asp-validation-summary="All"></div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>

    <div>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
    </div>

    <div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
    </div>

    <div>
        <label asp-for="Age"></label>
        <input asp-for="Age" />
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" />
    </div>

    <div>
        <label asp-for="RoleSelected"></label>
        <select asp-for="RoleSelected" asp-items="Model.Roles"></select>
    </div>

    <div>
        <button type="submit">Inscription</button>
    </div>
</form>
